# JWT Authentication Lab - Environment Configuration Template
# Copy this file to .env and set your values

# Server Configuration
VULN_PORT=1234
SECURE_PORT=1235
NODE_ENV=development

# Database Configuration
DB_PATH=./users.db

# JWT Secrets - Generate secure random secrets
# Access Token Secret (for short-lived access tokens)
ACCESS_SECRET=your_access_secret_here_replace_with_secure_random_string

# Refresh Token Secret (different from access secret)
REFRESH_SECRET=your_refresh_secret_here_replace_with_secure_random_string

# Vulnerable Server Secret (intentionally weak for lab purposes)
WEAK_SECRET=weak-secret-lab-only

# JWT Configuration
JWT_ISSUER=jwt-lab-secure
JWT_AUDIENCE=jwt-lab-client
ACCESS_TOKEN_LIFETIME=15m
REFRESH_TOKEN_LIFETIME=7d

# CORS Configuration
CORS_ORIGIN_VULN=http://localhost:1234
CORS_ORIGIN_SECURE=http://localhost:1235
